/* pages/followers/followers.wxss */
.followers-container {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 标签页样式 */
.custom-tabs {
  background-color: #ffffff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 用户列表容器 */
.user-list {
  padding: 0 0 40rpx 0;
}

/* 用户项 */
.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-bottom: 2rpx;
  background-color: #ffffff;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #f0f0f0;
}

.user-details {
  flex: 1;
  overflow: hidden;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-signature {
  font-size: 26rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 操作按钮 */
.user-action {
  margin-left: 16rpx;
}

.action-buttons {
  display: flex;
}

.chat-btn {
  margin-right: 16rpx;
  min-width: 120rpx !important;
}

.follow-btn {
  min-width: 140rpx !important;
}

/* 加载更多 */
.loading-more {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  padding: 30rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state t-icon {
  margin-bottom: 24rpx;
}

.empty-state text {
  font-size: 30rpx;
  color: #999999;
} 