page {
  height: 100vh;
  background-color: #f6f6f6;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 导航栏样式 */
.custom-navbar {
  --td-navbar-bg-color: #FF4F4F;
  --td-navbar-color: #FFFFFF;
}

/* 内容区域 */
.content-container {
  flex: 1;
  overflow-y: auto;
}

/* 轮播图 */
.banner {
  height: 300rpx;
  margin-bottom: 80rpx;
}

