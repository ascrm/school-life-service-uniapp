/* profile.wxss */
.profile-container {
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户卡片样式 */
.user-card {
  background: linear-gradient(to right, #FF6A6A, #FF4F4F);
  padding: 40rpx 30rpx 20rpx;
  color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 79, 79, 0.2);
}

.user-info-container {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}

.avatar {
  margin-right: 30rpx;
  --td-avatar-bg-color: rgba(255, 255, 255, 0.2);
  --td-avatar-border-radius: 50%;
  --td-avatar-large-width: 120rpx;
  --td-avatar-large-height: 120rpx;
}

.user-details {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.login-btn {
  margin: 0;
  padding: 0;
  --td-button-primary-bg-color: rgba(255, 255, 255, 0.3);
  --td-button-primary-border-color: rgba(255, 255, 255, 0.3);
  --td-button-border-radius: 40rpx;
}

.edit-btn {
  margin: 0;
  padding: 0;
  --td-button-default-border-color: rgba(255, 255, 255, 0.5);
  --td-button-default-color: #ffffff;
  --td-button-border-radius: 40rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 数据统计 */
.stats-grid {
  margin-top: 10rpx;
  --td-grid-item-description-color: rgba(255, 255, 255, 0.7);
	--td-grid-item-hover-state: none;
}

.stats-grid-item-value {
  font-size: 32rpx !important;
  font-weight: bold !important;
  color: #fff !important;
  margin-bottom: 6rpx !important;
}

/* 各部分容器 */
.section-container {
  margin: 30rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 24rpx 30rpx 12rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 自定义Cell样式 */
.custom-cell {
  --td-cell-title-font-size: 28rpx;
  --td-cell-note-font-size: 24rpx;
  --td-cell-note-color: #999;
  --td-cell-padding: 24rpx 30rpx;
}

/* 版本信息 */
.version-info {
  margin-top: 60rpx;
  color: #999;
  --td-divider-color: #eee;
  --td-divider-content-color: #999;
}

.menu-list {
  padding: 30rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 32rpx;
} 