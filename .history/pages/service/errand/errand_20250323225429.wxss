/* pages/service/errand/errand.wxss */

page {
  background-color: #f7f7f7;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.errand-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 顶部导航 */
.header {
  background-color: #ff4f4f;
  padding: 20rpx 30rpx;
  padding-top: 80rpx;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 标签切换 */
.tabs-container {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eeeeee;
  position: sticky;
  top: 0;
  z-index: 9;
}

.tab-item {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  margin-right: 20rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background-color: rgba(255, 79, 79, 0.1);
  color: #ff4f4f;
  font-weight: 500;
}

/* 主内容区域 */
.errand-list-container {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 订单卡片 */
.errand-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.errand-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.errand-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  flex: 1;
}

.errand-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4f4f;
}

.errand-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.errand-type {
  font-size: 24rpx;
  color: #666666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.errand-time {
  font-size: 24rpx;
  color: #999999;
}

.errand-locations {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.location-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  max-width: 40%;
}

.location-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  position: relative;
}

.location-icon.pickup {
  background-color: #4ecdb6;
}

.location-icon.pickup::after {
  content: "";
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background-color: white;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.location-icon.dest {
  background-color: #ff4f4f;
}

.location-arrow {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-line {
  height: 2rpx;
  background-color: #dddddd;
  width: 80%;
  position: relative;
}

.arrow-line::after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  border-left: 10rpx solid #dddddd;
}

.errand-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.publisher-info {
  display: flex;
  align-items: center;
}

.publisher-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.publisher-name {
  font-size: 24rpx;
  color: #999999;
}

.errand-status {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.status-tag.待接单 {
  color: #5e7ce0;
  background-color: rgba(94, 124, 224, 0.1);
}

.status-tag.进行中 {
  color: #ff9d00;
  background-color: rgba(255, 157, 0, 0.1);
}

.status-tag.已完成 {
  color: #4ecdb6;
  background-color: rgba(78, 205, 182, 0.1);
}

.status-tag.已取消 {
  color: #999999;
  background-color: rgba(153, 153, 153, 0.1);
}

.take-btn {
  font-size: 24rpx;
  color: white;
  background-color: #ff4f4f;
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  line-height: 1.2;
  min-height: unset;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载更多 */
.loading-area {
  padding: 30rpx 0;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-dots {
  display: flex;
  margin-bottom: 10rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #dddddd;
  margin: 0 6rpx;
  animation: loading 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading {
  0%, 80%, 100% { 
    transform: scale(0);
  } 40% { 
    transform: scale(1.0);
  }
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.empty-icon {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  position: relative;
}

.empty-icon::before,
.empty-icon::after {
  content: "";
  position: absolute;
  background-color: #dddddd;
}

.empty-icon::before {
  width: 60rpx;
  height: 20rpx;
  border-radius: 10rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.empty-icon::after {
  width: 20rpx;
  height: 60rpx;
  border-radius: 10rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 发布按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ff4f4f;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(255, 79, 79, 0.3);
  z-index: 100;
}

.fab-icon {
  font-size: 60rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
} 