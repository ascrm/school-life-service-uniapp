/* pages/service/secondhand/secondhand.wxss */

.secondhand-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.custom-navbar {
  --td-navbar-color: #333333;
  --td-navbar-bg-color: #ffffff;
}

.search-bar {
  padding: 16rpx 24rpx;
  background-color: #ffffff;
}

.custom-tabs {
  --td-tab-item-active-color: #ff4f4f;
  --td-tab-track-color: #ff4f4f;
  background-color: #ffffff;
}

.category-scroll {
  background-color: #ffffff;
  white-space: nowrap;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 0 16rpx;
}

.category-item {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin: 0 12rpx;
  font-size: 28rpx;
  color: #666666;
  border-radius: 28rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  color: #ffffff;
  background-color: #ff4f4f;
}

.goods-container {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  position: relative;
  width: 48%;
  margin-bottom: 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.goods-item.sold {
  opacity: 0.8;
}

.goods-image-container {
  position: relative;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}

.goods-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.goods-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  border-bottom-left-radius: 12rpx;
}

.goods-info {
  padding: 16rpx;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  height: 78rpx;
}

.goods-meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.goods-condition {
  font-size: 24rpx;
  color: #666666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.goods-location {
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.goods-price-row {
  display: flex;
  align-items: center;
}

.goods-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4f4f;
  margin-right: 8rpx;
}

.goods-original-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

.collect-btn {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.loading-area {
  padding: 24rpx 0;
  text-align: center;
}

.no-more {
  text-align: center;
  padding: 24rpx 0;
  color: #999999;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.empty-state t-icon {
  margin-bottom: 24rpx;
}

.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #ff4f4f;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 79, 79, 0.3);
  z-index: 100;
} 