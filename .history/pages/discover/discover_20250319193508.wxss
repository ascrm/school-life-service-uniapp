/* pages/discover/discover.wxss */

/* 页面容器 */
.discover-container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 120rpx;
}

/* 搜索区域 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.custom-search {
  --td-search-bg-color: #f5f5f5;
  --td-search-icon-color: #999;
  --td-search-placeholder-color: #bbbbbb;
  border-radius: 40rpx;
}

/* 标签页 */
.custom-tabs {
  --td-tab-item-active-color: #FF4F4F;
  --td-tab-track-color: #FF4F4F;
  position: relative;
  z-index: 9;
  background-color: #fff;
}

/* 热门标签区域 */
.tags-container {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.tags-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tags-title text {
  margin-left: 10rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
}

.custom-tag {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  --td-tag-primary-color: #FF4F4F;
  --td-tag-primary-light-color: rgba(255, 79, 79, 0.1);
}

/* 内容区域 */
.content-container {
  padding: 20rpx;
}

/* 推荐内容卡片 */
.post-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.post-card {
  width: calc(50% - 10rpx);
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.post-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.post-info {
  padding: 16rpx;
}

.post-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.post-author {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.post-author t-avatar {
  margin-right: 6rpx;
}

.post-author text {
  margin-left: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 80rpx;
}

.post-likes {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.post-likes t-icon {
  margin-right: 4rpx;
}

/* 活动卡片 */
.event-card {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.event-image {
  width: 200rpx;
  height: 200rpx;
  object-fit: cover;
}

.event-info {
  flex: 1;
  padding: 20rpx;
  position: relative;
}

.event-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.event-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 14rpx;
}

.event-details {
  display: flex;
  flex-wrap: wrap;
}

.event-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.event-participants {
  font-size: 22rpx;
  color: #999;
}

/* 瀑布流布局 */
.waterfall-layout {
  display: flex;
  justify-content: space-between;
}

.waterfall-column {
  width: calc(50% - 10rpx);
}

.waterfall-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.waterfall-image {
  width: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

.waterfall-content {
  padding: 16rpx;
}

.waterfall-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.waterfall-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.waterfall-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.waterfall-author {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.waterfall-author t-avatar {
  margin-right: 6rpx;
}

.waterfall-author text {
  margin-left: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 80rpx;
}

.waterfall-likes {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.waterfall-likes t-icon {
  margin-right: 4rpx;
}

/* 加载更多 */
.loading-more {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
}

/* 悬浮按钮 */
.floating-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  z-index: 99;
  --td-button-primary-bg-color: #FF4F4F;
  --td-button-primary-border-color: #FF4F4F;
}