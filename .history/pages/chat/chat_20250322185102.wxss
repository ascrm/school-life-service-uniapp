/* pages/chat/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

/* 关注状态提示条 */
.follow-status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f0f9ff;
  border-bottom: 1rpx solid #e6f4ff;
}

.follow-status-text {
  font-size: 26rpx;
  color: #333333;
}

.follow-status-action {
  margin-left: 16rpx;
}

/* 消息限制提示 */
.message-limit-tip {
  padding: 16rpx 24rpx;
  background-color: #fff7e6;
  text-align: center;
  font-size: 24rpx;
  color: #fa8c16;
}

/* 聊天消息列表 */
.messages-container {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.messages-list {
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  margin-bottom: 28rpx;
  position: relative;
}

.message-sent {
  flex-direction: row-reverse;
}

.message-received {
  flex-direction: row;
}

/* 头像样式 */
.message-avatar-container {
  margin: 0 16rpx;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

/* 消息内容容器 */
.message-content-container {
  max-width: 70%;
  display: flex;
  flex-direction: column;
}

.message-sent .message-content-container {
  align-items: flex-end;
}

.message-received .message-content-container {
  align-items: flex-start;
}

/* 消息气泡 */
.message-bubble {
  padding: 16rpx 24rpx;
  border-radius: 18rpx;
  word-break: break-all;
}

.message-sent .message-bubble {
  background-color: #0052d9;
  color: #ffffff;
  border-top-right-radius: 4rpx;
}

.message-received .message-bubble {
  background-color: #ffffff;
  color: #333333;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 已撤回消息 */
.message-recalled {
  background-color: #f5f5f5 !important;
  color: #999999 !important;
  font-style: italic;
}

/* 文本消息 */
.message-text {
  font-size: 30rpx;
  line-height: 1.5;
}

/* 图片消息 */
.message-image-container {
  padding: 8rpx;
  background-color: transparent !important;
}

.message-image {
  max-width: 400rpx;
  border-radius: 12rpx;
}

/* 视频消息 */
.message-video-container {
  padding: 8rpx;
  background-color: transparent !important;
}

.message-video {
  width: 400rpx;
  height: 225rpx;
  border-radius: 12rpx;
}

/* 文件消息 */
.message-file-container {
  width: 400rpx;
}

.message-file {
  display: flex;
  align-items: center;
}

.message-file-name {
  margin-left: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

/* 消息状态 */
.message-status {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.status-sending {
  color: #999999;
}

.status-sent {
  color: #52c41a;
}

.status-failed {
  color: #ff4d4f;
}

/* 消息时间 */
.message-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e6e6e6;
  position: relative;
}

.input-actions {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.input-actions t-icon {
  margin-right: 24rpx;
  color: #666666;
}

.input-box {
  flex: 1;
  background-color: #f7f7f7;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
}

.message-input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
}

.input-placeholder {
  color: #999999;
}

.send-button {
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 媒体选择菜单 */
.media-menu {
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  overflow: hidden;
}

.media-menu-title {
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333333;
  border-bottom: 1rpx solid #e6e6e6;
}

.media-menu-options {
  display: flex;
  justify-content: space-around;
  padding: 36rpx 24rpx;
}

.media-option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.media-option-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #f0f2f5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.media-option-label {
  font-size: 28rpx;
  color: #333333;
}

.media-menu-cancel {
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333333;
  border-top: 1rpx solid #e6e6e6;
}

/* 表情选择器 */
.emoji-picker {
  background-color: #ffffff;
  padding: 24rpx;
  border-top: 1rpx solid #e6e6e6;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
}

.emoji-item {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin: 12rpx;
} 